<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<!-- page content -->
<div class="signin">
    <div class="uk-panel uk-container uk-margin-large-top">
        <h2 class="uk-text-uppercase">Sign in</h2>
        <div class="signin-content uk-box-shadow-large uk-padding-large">
            <% if (errorMessage) { %>
                <div class="uk-alert-danger" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <p><%= errorMessage %></p>    
                </div> 
            <% } %>
            <form action="/login" method="POST" novalidate class="uk-grid-small uk-form-stacked" uk-grid>
                <div class="uk-width-1-2@s">
                    <label class="uk-form-label" for="email">Email</label>
                    <div class="uk-form-controls">
                        <input 
                            class="uk-input <%= validationErrors.find(e => e.param === 'email') ? 'uk-form-danger' : '' %>"
                            type="email" 
                            name="email" 
                            id="email" 
                            placeholder="Email"
                            value="<%= oldInputs.email %>"
                        />
                    </div>  
                </div>
                <div class="uk-width-1-3@s">
                    <label class="uk-form-label" for="password">Password</label>
                    <div class="uk-form-controls">
                        <input 
                            class="uk-input <%= validationErrors.find(e => e.param === 'password') ? 'uk-form-danger' : '' %>" 
                            type="password" 
                            name="password" 
                            id="password"
                            placeholder="Password"
                            value="<%= oldInputs.password %>"
                        />
                    </div>
                </div>
                <div class="uk-width-1-2@s uk-text-left">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <button class="uk-button uk-button-primary uk-margin-small-right" type="submit">Sign In</button>
                    <a href="/reset">Reset Password</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../includes/end.ejs') %>
