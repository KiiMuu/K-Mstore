<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<div class="new-password">
    <div class="uk-panel uk-container uk-margin-large-top">
        <h2 class="uk-text-uppercase">New Password</h2>
        <div class="new-content uk-box-shadow-large uk-padding-large">
            <% if (errorMessage) { %>
                <div class="uk-alert-danger" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <p><%= errorMessage %></p>    
                </div> 
            <% } %>
            <form action="/new-password" method="POST" novalidate class="uk-grid-small uk-form-stacked" uk-grid>
                <div class="uk-width-1-1@s">
                    <label class="uk-form-label" for="password">Password</label>
                    <div class="uk-form-controls">
                        <input 
                            class="uk-input"
                            type="password" 
                            name="password" 
                            id="password" 
                            placeholder="Email"
                        />
                    </div>
                </div>
                <div class="uk-width-1-1@s">
                    <input type="hidden" value="<%= userId %>" name="userId">
                    <input type="hidden" value="<%= passwordToken %>" name="passwordToken">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <button type="submit" class="uk-button uk-button-primary uk-margin-small-right">Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

